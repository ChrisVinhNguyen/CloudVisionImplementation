<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="Text to Speech"
        app:title="Text to Speech Settings">
        <ListPreference
            app:key="SpeechRateValue"
            app:title="Set Speech Rate"
            app:entries="@array/Numbers"
            app:entryValues="@array/NumbersValue" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="Description Level"
        app:title="Audio Feedback Settings">
        <ListPreference
            app:key="DescriptionLevel"
            app:title="Set Description Level"
            app:entries="@array/Descriptions"
            app:entryValues="@array/DescriptionValues" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>